@RPWRazor.RPRazorHelper.Include("/link.html")
    <script type="text/javascript">
        $(function () {

            $("#btnApply").click(function () {
                var name = $("#name").val();
                var telephone = $("#telephone").val();
                var qqNum = $("#qqNum").val();
                var school = $("#school").val();
                var course = $("#Course").val();
                if (name.length==0) {
                    alert("请填写您的姓名");
                    return;
                }
                if (telephone.length == 0) {
                    alert("请填写您的手机号");
                    return;
                }
                if (qqNum.length == 0) {
                    alert("请填写您的QQ号");
                    return;
                }
                if (school.length == 0) {
                    alert("请填写您的学校");
                    return;
                }
                if (course.length == 0) {
                    alert("请填写您的想学习的课程");
                    return;
                }
                $.ajax({
                    type: "post", url: "FrontUserController.ashx",
                    dataType: "json",
                    data: { action:"application",name: name, telephone: telephone, qqNum: qqNum, school: school, course: course },
                    success: function (data) {
                        if (data.Status == "ok") {
                            alert(data.Msg);
                        } else {
                            alert(data.Msg);
                        }
                    },
                    error: function () {
                        alert("请求失败！");
                    }

                });
            });

        });


    </script>
 
